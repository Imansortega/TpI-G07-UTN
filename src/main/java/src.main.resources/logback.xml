<configuration>

    <!-- Definición del apéndice (appender) para la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuración de nivel de raíz (root) -->
    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
